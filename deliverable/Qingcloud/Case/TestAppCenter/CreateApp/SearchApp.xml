<testCase>
	<title>Search APP</title>
	<description>Search APP</description>
	<stopIfFailed>true</stopIfFailed>
	<repeat>1</repeat>  
	
	<!-- 等待页面加载 -->
    <action>
        <name>waitPageToLoad</name>
       	<elapse>10000</elapse>
    </action>
	
	<!-- 输入查询条件 -->
	 <action>
		<name>inputText</name>
		<element>header-search__input___1WP7g</element>
		<elementBy>className</elementBy>
		<value>${AppName}</value>
	</action>
	
	<!-- 查询 -->
	<action>
		<name>enter</name>
		<element>header-search__input___1WP7g</element>
		<elementBy>className</elementBy>
	</action>
	
	<!-- 等待页面加载 -->
    <action>
        <name>waitPageToLoad</name>
       	<elapse>10000</elapse>
    </action>
	
	<!-- 验证有相关的app可以创建，否则验证不通过 -->
	<action>
		<name>assertBodyTextNotPresent</name>
		<value>暂无相关应用</value> 
	</action>

	 <!-- 点击查询到的第一个app进入创建app页面 -->
	<action>
		<name>click</name>
		<element>//*[@id="container"]/div/div[2]/div/div[2]/div[1]</element>
		<elementBy>xpath</elementBy>
	</action>
	
	<!-- 点击部署到控制台按钮 -->
	<action>
		<name>click</name>
		<element>//*[@id="container"]/div/div[2]/div/div[2]/button</element>
		<elementBy>xpath</elementBy>
	</action>
	
	<!-- 选择要部署的区域 -->
	<action>
		<name>click</name>
		<element>${Area}</element>
		<elementBy>linkText</elementBy>
	</action>
	
	
</testCase>